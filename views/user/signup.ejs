<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup Page</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            display: flex;
            flex-direction: column;
            align-items: center;
            background-color: #f5f5f5;
            margin: 0;
        }

        header {
            width: 100%;
            background: #000;
            color: #fff;
            padding: 0.5rem 2rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        header nav a {
            color: white;
            margin: 0 15px;
            text-decoration: none;
            font-size: 1rem;
        }

        .login-container {
            display: flex;
            flex-wrap: wrap;
            background: #fff;
            margin: 2rem;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 90%;
            max-width: 1200px;
        }

        .login-form {
            flex: 1;
            padding: 1rem;
        }

        .login-form h1 {
            margin-bottom: 1rem;
            color: #333;
        }

        .login-form p {
            margin-bottom: 1.5rem;
            color: #777;
        }

        .form-group {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            margin-bottom: 1rem;
        }

        .form-group div {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .form-group label {
            margin-bottom: 0.5rem;
            color: #333;
        }

        .form-group input {
            padding: 0.75rem;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .error-message {
            color: red;
            font-size: 0.8rem;
            margin-top: 0.5rem;
        }

        .login-form button {
            width: 100%;
            padding: 0.75rem;
            background: black;
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 1rem;
            cursor: pointer;
            margin-top: 1rem;
        }

        .login-form button:hover {
            background: #333;
        }

        .login-form a {
            display: flex;
            text-align: center;
            justify-content: center;
            text-decoration: none;
            color: #333;
            font-size: 0.9rem;
            margin-top: 1rem;
        }

        .login-form a:hover {
            text-decoration: underline;
        }

        .login-image {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 1rem;
        }

        .login-image img {
            max-width: 100%;
            border-radius: 8px;
        }

        .footer-image {
            width: 80%;
            max-width: 1200px;
            margin-top: 2rem;
        }

        .footer-image img {
            width: 100%;
            border-radius: 8px;
        }

        .nav-bar {
            display: flex; 
            align-items: center; 
            justify-content: space-between; 
            background-color: #000; 
            padding: 0.5rem 1rem; 
            color: #fff;
            height: 50px;
            width: 100%;
        }
    
        .navbar-logo {
            height: 200px;
            width: 200px; 
        }
    
        .nav-links {
            display: flex;
            gap: 1rem; 
        }

        .account-text {
            display: flex;
            margin: 0;
            padding: 0;
            white-space: nowrap;
        }

        .account-text a {
            color: blue;
            text-decoration: underline;
        }

        .social-btns {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .btn {
            display: flex;
            align-items: center;
            text-decoration: none;
            font-size: 16px;
            padding: 10px 20px;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

        .btn img {
            width: 24px;
            height: 24px;
            margin-right: 10px;
        }

        .btn-outline-google {
            border: 2px solid #db4437;
            color: #db4437;
            background: transparent;
        }

        .btn-outline-google:hover {
            background: #db4437;
            color: white;
        }

        @media (max-width: 768px) {
            .login-container {
                flex-direction: column;
                align-items: center;
                padding: 1rem;
            }

            .login-form {
                width: 100%;
                padding: 0.5rem;
            }

            .login-image {
                width: 100%;
                padding: 0.5rem;
            }

            .nav-links {
                gap: 0.5rem;
                font-size: 0.9rem;
            }
        }

        @media (max-width: 480px) {
            header {
                flex-direction: column;
                align-items: flex-start;
            }

            .nav-links {
                flex-direction: column;
                gap: 0.3rem;
                margin-top: 0.5rem;
            }

            .login-container {
                padding: 0.5rem;
            }

            .login-form button {
                font-size: 0.9rem;
                padding: 0.5rem;
            }
        }
    </style>
</head>
<body>
    <header>
        <nav class="nav-bar">
            <img src="images/logo - Copy.png" alt="Sneakkish Logo" class="navbar-logo">
            <div class="nav-links">
                <a href="/">Home</a>
                <a href="#">About</a>
                <a href="#">Contact</a>
            </div>
        </nav>
    </header>
    <div class="login-container">
        <div class="login-form">
            <h1>Signup</h1>
            <form id="signForm" method="post" action="/signup">
                <div class="form-group">
                    <div>
                        <label for="first-name">First Name</label>
                        <input name="FirstName" type="text" id="first-name">
                        <div id="error1" class="error-message"></div>
                    </div>

                    <div>
                        <label for="last-name">Last Name</label>
                        <input name="LastName" type="text" id="last-name">
                        <div id="error2" class="error-message"></div>
                    </div>
                </div>

                <div class="form-group">
                    <div>
                        <label for="email">Email</label>
                        <input name="Email" type="email" id="email">
                        <div id="error3" class="error-message"></div>
                    </div>

                    <div>
                        <label for="phone-number">Phone Number</label>
                        <input name="PhoneNumber" type="text" id="phone-number">
                        <div id="error4" class="error-message"></div>
                    </div>
                </div>

                <div class="form-group">
                    <div>
                        <label for="password">Password</label>
                        <input name="Password" type="password" id="password">
                        <div id="error5" class="error-message"></div>
                    </div>

                    <div>
                        <label for="confirm-password">Confirm Password</label>
                        <input name="ConfirmPassword" type="password" id="confirm-password">
                        <div id="error6" class="error-message"></div>
                    </div>
                </div>

                <!-- Referral Code Field (Optional) -->
                <div class="form-group">
                    <div>
                        <label for="referral-code">Referral Code (Optional)</label>
                        <input name="ReferralCode" type="text" id="referral-code">
                        <div id="error7" class="error-message"></div>
                    </div>
                </div>

                <% if (locals.message && message.length > 0) { %>
                    <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
                        <%= message %>
                    </div>
                <% } %>

                <div>  
                    <div class="social-btns">
                        <a href="/auth/google" class="btn btn-outline-google">
                          <img src="images/google-logo-search-new.svg" alt="Google Logo" />
                          Sign in with Google
                        </a>
                      </div> 
                </div>

                <button type="submit">Create Account</button>
            </form>
        </div>
        <div class="login-image">
            <img src="images/SHOES/SHOE-8.png" alt="Sneaker">
        </div>
    </div>

    <script>
        document.getElementById("signForm").addEventListener("submit", function(event) {
            let isValid = true;

            // Get input values
            let firstName = document.getElementById("first-name").value.trim();
            let lastName = document.getElementById("last-name").value.trim();
            let email = document.getElementById("email").value.trim();
            let phoneNumber = document.getElementById("phone-number").value.trim();
            let password = document.getElementById("password").value;
            let confirmPassword = document.getElementById("confirm-password").value;

            // Reset previous error messages
            document.querySelectorAll(".error-message").forEach(el => el.textContent = "");

            // Validate first name
            if (firstName === "") {
                document.getElementById("error1").textContent = "First name is required.";
                isValid = false;
            }

            // Validate last name
            if (lastName === "") {
                document.getElementById("error2").textContent = "Last name is required.";
                isValid = false;
            }

            // Validate email
            let emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailPattern.test(email)) {
                document.getElementById("error3").textContent = "Invalid email format.";
                isValid = false;
            }

            // Validate phone number (must be 10 digits)
            let phonePattern = /^\d{10}$/;
            if (!phonePattern.test(phoneNumber)) {
                document.getElementById("error4").textContent = "Phone number must be 10 digits.";
                isValid = false;
            }

            // Validate password (minimum 6 characters)
            if (password.length < 6) {
                document.getElementById("error5").textContent = "Password must be at least 6 characters.";
                isValid = false;
            }

            // Validate confirm password
            if (password !== confirmPassword) {
                document.getElementById("error6").textContent = "Passwords do not match.";
                isValid = false;
            }

            if (!isValid) {
                event.preventDefault(); // Prevent form submission if validation fails
            }
        });
    </script>
</body>
</html>