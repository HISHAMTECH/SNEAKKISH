                                            <% } %>
                                            <div class="product__item__pic set-bg" data-setbg="/uploads/re-image/<%= productItem.ProductImage[0] || 'default-image.jpg' %>"></div>
                                            <div class="product__item__text">
                                                <!-- Size Selection -->
                                                <div class="size-selection">
                                                    <% if (productItem.Variants && productItem.Variants.length > 0) { %>
                                                        <% productItem.Variants.forEach((variant, idx) => { %>
                                                            <label for="size-<%= productItem._id %>-<%= variant.Size %>">
