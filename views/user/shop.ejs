    <!-- JavaScript Logic -->
    <script>
        $(document).ready(function() {
            // Initialize background images
            document.querySelectorAll('.set-bg').forEach(element => {
                const bg = element.getAttribute('data-setbg');
                element.style.backgroundImage = `url(${bg})`;
            });

            // Initialize size selection for each product
            $('input[name^="size-"]').change(function() {
                const productId = $(this).attr('name').split('-')[1];
                $(`label[for^="size-${productId}-"]`).removeClass('active');
                $(this).parent('label').addClass('active');
            });

            // Ensure initial active state
            $('input[name^="size-"]:checked').each(function() {
                $(this).parent('label').addClass('active');
            });
        });

        // Add to Cart Function
        function addToCart(productId) {
            const selectedSize = $(`input[name="size-${productId}"]:checked`).val();

            if (!selectedSize) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Size Required',
                    text: 'Please select a size before adding to cart.',
                    confirmButtonColor: '#007bff'
                });
                return;
            }

            $.ajax({
                url: '/cart/add/' + productId,
                method: 'POST',
                data: {
                    quantity: 1, // Default quantity is 1
                    size: selectedSize
                },
                success: function(response) {
                    if (response.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Success',
                            text: 'Product added to cart successfully!',
                            confirmButtonColor: '#007bff'
                        }).then(() => {
                            window.location.href = "/product-page";
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: response.message || 'Failed to add product to cart',
                            confirmButtonColor: '#007bff'
                        });
                    }
                },
                error: function(err) {
                    console.error(err);
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Something went wrong. Please try again.',
                        confirmButtonColor: '#007bff'
                    });
                }
            });
        }
    </script>
