        }

        .form-control:focus {
            border-color: #00c4a7;
            box-shadow: 0 0 0 4px rgba(0, 196, 167, 0.2);
        }

        .form-control.is-invalid {
            border-color: #ef4444;
            box-shadow: 0 0 0 4px rgba(239, 68, 68, 0.2);
        }

        .error-message {
            color: #ef4444;
            font-size: 14px;
            margin-top: 8px;
            text-align: center;
            font-weight: 500;
            display: block;
        }

        .form-actions {
            width: 100%;
            margin-top: 20px;
            text-align: center;
            display: flex;
            justify-content: center;
        }

        .btn-primary {
            width: 80%;
            padding: 12px 16px;
            background-color: #00c4a7;
            border: none;
            border-radius: 8px;
            color: white;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
            display: block;
            margin-left: auto;
            margin-right: auto;
            max-width: 100%;
        }

        .btn-primary:hover {
            background-color: #00a38e;
            transform: translateY(-2px);
        }

        .btn-primary:active {
            transform: translateY(0);
        }

