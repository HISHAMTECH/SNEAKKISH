            margin-bottom: 20px;
        }

        .footer__newslatter form {
            position: relative;
            display: flex;
            align-items: center;
        }

        .footer__newslatter input {
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 4px 0 0 4px;
            font-size: 14px;
            outline: none;
            background-color: #fff;
            color: #333;
        }

        .footer__newslatter button {
            padding: 10px 15px;
            background-color: #00c4a7;
            border: none;
