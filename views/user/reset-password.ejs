            margin-bottom: 20px;
            text-align: center;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .form-group label {
            margin-bottom: 8px;
            color: #666;
            font-size: 16px;
            text-align: left;
            width: 80%;
        }

        .form-control {
            width: 80%;
            padding: 12px 16px;
            border: 2px solid #e5e7eb;
            border-radius: 8px;
            font-size: 16px;
