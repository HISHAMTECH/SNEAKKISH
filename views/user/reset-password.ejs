            color: #fff;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .footer__newslatter button:hover {
            background-color: #00a38e;
        }

        .footer__copyright__text {
            color: #b7b7b7;
            font-size: 14px;
            margin-top: 20px;
            text-align: center;
        }

        .footer__copyright__text a {
            color: #00c4a7;
            text-decoration: none;
        }

        .footer__copyright__text a:hover {
            text-decoration: underline;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .content-main {
                padding: 15px;
            }

            .card-reset {
                padding: 20px;
                width: 90%;
                min-width: 250px;
                max-width: 350px;
            }

            .card-title {
                font-size: 20px;
            }

            .form-control, .btn-primary {
                font-size: 14px;
                padding: 10px 12px;
                width: 100%;
            }

            .form-group label {
                font-size: 14px;
            }

            .footer {
                padding: 30px 0;
            }

            .footer__about, .footer__widget {
                margin-bottom: 20px;
                text-align: center;
            }

            .footer__about p, .footer__newslatter p {
                font-size: 13px;
            }

            .footer__widget h6 {
                font-size: 14px;
            }

            .footer__widget ul li a {
