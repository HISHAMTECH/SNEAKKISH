            }

            .footer__newslatter input {
                border-radius: 4px;
                margin-bottom: 10px;
                font-size: 13px;
            }

            .footer__newslatter button {
                border-radius: 4px;
                width: 100%;
                font-size: 13px;
            }

            .footer__copyright__text {
                font-size: 12px;
            }
        }

        @media (max-width: 480px) {
            .content-main {
                padding: 10px;
            }

            .card-reset {
                width: 100%;
                padding: 15px;
                min-width: 200px;
                max-width: 300px;
            }

            .card-title {
                font-size: 18px;
