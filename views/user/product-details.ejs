    <!-- JavaScript Logic -->
    <script>
        $(document).ready(function() {
            // Function to update quantity display
            function updateQuantityDisplay(quantity) {
                $('#selectedSizeQuantity').text(quantity || 'N/A');
            }

            // Initialize quantity display with the default selected size
            const defaultSize = $('input[name="size"]:checked');
            if (defaultSize.length > 0) {
                const defaultQuantity = defaultSize.data('quantity');
                updateQuantityDisplay(defaultQuantity);
            }

            // Handle size selection change
            $('input[name="size"]').change(function() {
                const quantity = $(this).data('quantity');
                $('#qty').attr('max', Math.min(quantity, 7));
                const currentQty = parseInt($('#qty').val());
                if (currentQty > Math.min(quantity, 7)) {
                    $('#qty').val(Math.min(quantity, 7));
                }
                $('.product__details__option__size label').removeClass('active');
                $(this).parent('label').addClass('active');
                updateQuantityDisplay(quantity);
            });

            // Initialize Owl Carousel for Similar Products
            $('.product__carousel').owlCarousel({
                loop: true,
                margin: 20,
                nav: true,
                dots: true,
                responsive: {
                    0: { items: 1 },    // 1 item for mobile view
                    600: { items: 2 },  // 2 items for tablets
                    1000: { items: 4 }  // 4 items for desktop
                }
            });

            // Mobile menu toggle
            $('.mobile-menu-btn').click(function() {
                $('.mobile-dropdown').addClass('active');
            });

            $('.close-btn').click(function() {
                $('.mobile-dropdown').removeClass('active');
            });

            // Desktop dropdown
            $('.dropdown-btn').click(function(e) {
                e.preventDefault();
                $(this).parent('.dropdown').toggleClass('active');
            });

            // Close desktop dropdown when clicking outside
            $(document).click(function(e) {
                if (!$(e.target).closest('.dropdown').length) {
                    $('.dropdown').removeClass('active');
                }
            });
        });

        function changeMainImage(imageSrc, thumbnailElement) {
            const mainImage = document.getElementById('mainImage');
            const thumbnails = document.getElementById('thumbnailList');
            const currentMainSrc = mainImage.src.split('/Uploads/re-image/')[1] || '/img/shop-details/product-big-2.png';
            mainImage.src = '/Uploads/re-image/' + imageSrc;
            
            const newThumbnail = document.createElement('img');
            newThumbnail.src = '/Uploads/re-image/' + currentMainSrc;
            newThumbnail.alt = 'Thumbnail';
            newThumbnail.className = 'thumbnail';
            newThumbnail.onclick = function() { changeMainImage(currentMainSrc, this); };
            
            thumbnails.insertBefore(newThumbnail, thumbnails.firstChild);
            thumbnails.removeChild(thumbnailElement);
        }

        function addToCart(productId) {
            const quantity = parseInt($('#qty').val());
            const selectedSize = $('input[name="size"]:checked').val();

            if (!selectedSize) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Size Required',
                    text: 'Please select a size before adding to cart.',
                    confirmButtonColor: '#007bff'
                });
                return;
            }

            $.ajax({
                url: '/cart/add/' + productId,
                method: 'POST',
                data: {
                    quantity: quantity,
                    size: selectedSize
                },
                success: function(response) {
                    if (response.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Success',
                            text: 'Product added to cart successfully!',
                            confirmButtonColor: '#007bff',
                            timer: 2000
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: response.message || 'Failed to add product to cart',
                            confirmButtonColor: '#007bff'
                        });
                    }
                },
                error: function(err) {
                    console.error(err);
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Something went wrong. Please try again.',
                        confirmButtonColor: '#007bff'
                    });
                }
            });
        }

        function addToWishlist(productId) {
            $.ajax({
                url: '/addToWishlist',
                method: "POST",
                data: { productId: productId },
                success: (response) => {
                    if (response.status) {
                        Swal.fire({
                            title: 'Added To Wishlist',
                            text: 'The Product Has Been Added To Your Wishlist',
                            icon: 'success',
                            timer: 2000
                        });
                    } else {
                        Swal.fire({
                            title: 'Already In Wishlist',
                            text: response.message,
                            icon: 'info',
                            timer: 2000
                        });
                    }
                },
                error: (error) => {
                    Swal.fire({
                        title: 'Error',
                        text: 'There Was An Error While Adding The Product To Wishlist',
                        icon: 'error',
                        timer: 2000
                    });
                }
            });
        }
    </script>
