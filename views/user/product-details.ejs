    <!-- JavaScript Logic -->
    <script>
        $(document).ready(function() {
            // Initialize Size Selection
            $('input[name="size"]').change(function() {
                const quantity = $(this).data('quantity');
                $('#qty').attr('max', Math.min(quantity, 7));
                const currentQty = parseInt($('#qty').val());
                if (currentQty > Math.min(quantity, 7)) {
                    $('#qty').val(Math.min(quantity, 7));
                }
                // Update active class
                $('.product__details__option__size label').removeClass('active');
                $(this).parent('label').addClass('active');
            });

            // Ensure initial active state
            $('input[name="size"]:checked').parent('label').addClass('active');
        });

        // Change Main Image
        function changeMainImage(imageSrc, thumbnailElement) {
            const mainImage = document.getElementById('mainImage');
            const currentMainSrc = mainImage.src.split('/uploads/re-image/')[1] || mainImage.src.split('/img/shop-details/')[1];
            mainImage.src = '/uploads/re-image/' + imageSrc;
            thumbnailElement.src = '/uploads/re-image/' + currentMainSrc || '/img/shop-details/thumb-1.png';
            const thumbnails = document.getElementById('thumbnailList');
            thumbnails.prepend(thumbnailElement);
        }

        // Add to Cart Function with SweetAlert2
       // Add to Cart Function with SweetAlert2
function addToCart(productId) {
    const quantity = parseInt($('#qty').val());
    const selectedSize = $('input[name="size"]:checked').val();

    if (!selectedSize) {
        Swal.fire({
            icon: 'warning',
            title: 'Size Required',
            text: 'Please select a size before adding to cart.',
            confirmButtonColor: '#007bff'
        });
        return;
    }

    $.ajax({
        url: '/cart/add/' + productId,
        method: 'POST',
        data: {
            quantity: quantity,
            size: selectedSize
        },
        success: function(response) {
            if (response.success) {
                Swal.fire({
                    icon: 'success',
                    title: 'Success',
                    text: 'Product added to cart successfully!',
                    confirmButtonColor: '#007bff'
                }).then(() => {
                    // Redirect to /productDetails with productId
                    window.location.href = '/productDetails?id=' + productId;
                });
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: response.message || 'Failed to add product to cart',
                    confirmButtonColor: '#007bff'
                });
            }
        },
        error: function(err) {
            console.error(err);
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: 'Something went wrong. Please try again.',
                confirmButtonColor: '#007bff'
            });
        }
    });
}

        // Add to Wishlist Function with SweetAlert2
        function addToWishlist(productId) {
            $.ajax({
                url: '/add-to-wishlist',
                method: 'POST',
                data: { productId: productId },
                success: function(response) {
                    if (response.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Success',
                            text: 'Product added to wishlist successfully!',
                            confirmButtonColor: '#007bff'
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: response.message || 'Failed to add product to wishlist',
                            confirmButtonColor: '#007bff'
                        });
                    }
                },
                error: function(err) {
                    console.error(err);
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Something went wrong. Please try again.',
                        confirmButtonColor: '#007bff'
                    });
                }
            });
        }
    </script>
