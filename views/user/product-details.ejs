    <!-- Custom Styles -->
    <style>
        /* Image Zoom and Thumbnails */
        .zoom {
            transition: transform 0.3s ease;
            width: 100%;
            max-width: 500px;
            height: auto;
            border-radius: 10px;
        }
        .zoom:hover {
            transform: scale(1.1);
        }
        .thumbnails {
            display: flex;
            gap: 10px;
            justify-content: center;
            margin-top: 10px;
        }
        .thumbnails img {
            width: 60px;
            height: 60px;
            object-fit: cover;
            cursor: pointer;
            border: 2px solid transparent;
            transition: border 0.3s, transform 0.3s;
            border-radius: 5px;
        }
        .thumbnails img:hover {
            border: 2px solid #333;
            transform: scale(1.1);
        }

        /* Size Selection Styling */
        .product__details__option__size {
            margin: 20px 0;
        }
        .product__details__option__size span {
            font-weight: bold;
            margin-right: 10px;
        }
        .product__details__option__size label {
            display: inline-block;
            margin: 0 5px;
            padding: 8px 15px;
            border: 2px solid #ddd;
            border-radius: 5px;
            cursor: pointer;
            background: #f8f9fa;
            transition: all 0.3s ease;
            font-size: 14px;
        }
        .product__details__option__size label.active {
            background: #007bff;
            color: #fff;
            border-color: #007bff;
        }
        .product__details__option__size label:hover {
            background: #e9ecef;
        }
        .product__details__option__size input[type="radio"] {
            display: none;
        }

        /* Cart Button Styling */
        .product__details__cart__option .primary-btn:disabled {
            background: #ccc;
            cursor: not-allowed;
        }
        .product__details__cart__option .pro-qty {
            margin-right: 15px;
        }

        /* Similar Products (unchanged) */
        .similar-products {
            max-width: 1200px;
            margin: 40px auto;
            padding: 20px;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
        .similar-products h2 {
            font-size: 24px;
            color: #333;
            margin-bottom: 20px;
            text-align: center;
            font-weight: 600;
        }
        .product-list {
            display: flex;
            flex-wrap: wrap;
            gap: 30px;
            justify-content: center;
        }
        .product-item {
            flex: 0 0 calc(25% - 22.5px);
            background: #f5f5f5;
            border-radius: 10px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
            padding: 15px;
            transition: transform 0.3s ease;
            position: relative;
            overflow: hidden;
            border: 2px solid #007bff;
        }
        .product-item:hover {
            transform: translateY(-5px);
        }
        .product-item:hover .card-body h3 {
            display: none;
        }
        .product-item:hover .add-to-cart {
            display: block;
        }
        .card-content { padding: 10px; }
        .card-body h3 {
            font-size: 20px;
            color: #000;
            margin: 10px 0;
            font-weight: bold;
            transition: opacity 0.3s ease;
        }
        .card-body p {
            font-size: 14px;
            color: #333;
            margin: 5px 0;
        }
        .size-button {
            display: inline-block;
            padding: 8px 16px;
            background: #27ae60;
            color: white;
            border-radius: 5px;
            font-size: 14px;
            margin: 10px 0;
        }
        .rating { font-size: 18px; color: #ffd700; margin: 10px 0; }
        .product-item img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 5px;
            margin-top: 10px;
            display: block;
        }
        .add-to-cart {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            padding: 12px 24px;
            background: #000;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            transition: opacity 0.3s ease;
            z-index: 1;
            display: none;
        }
        .product-item a { text-decoration: none; color: inherit; display: block; }
        @media (max-width: 991px) { .product-item { flex: 0 0 calc(33.33% - 20px); } }
        @media (max-width: 767px) { .product-item { flex: 0 0 calc(50% - 15px); } }
        @media (max-width: 575px) { .product-item { flex: 0 0 100%; } }
    </style>
</head>

