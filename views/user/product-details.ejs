                </div>
                <div class="row">
                    <div class="col-lg-3 col-md-3">
                        <div class="thumbnails" id="thumbnailList">
                            <% if (product.ProductImage && product.ProductImage.length > 0) { %>
                                <% product.ProductImage.forEach((image, index) => { %>
                                    <img src="/uploads/re-image/<%= image || '/img/shop-details/thumb-1.png' %>" 
                                         alt="Thumbnail <%= index + 1 %>" 
                                         class="thumbnail" 
                                         onclick="changeMainImage('<%= image %>', this)">
                                <% }); %>
                            <% } else { %>
                                <img src="/img/shop-details/thumb-1.png" 
                                     alt="Default Thumbnail" 
                                     class="thumbnail" 
                                     onclick="changeMainImage('/img/shop-details/thumb-1.png', this)">
                            <% } %>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-9">
                        <div class="product__details__pic__item">
                            <img src="<%= product.ProductImage && product.ProductImage.length > 0 ? '/uploads/re-image/' + product.ProductImage[0] : '/img/shop-details/product-big-2.png' %>" 
                                 alt="<%= product.ProductName || 'Product Image' %>" 
                                 id="mainImage" 
                                 class="zoom">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="product__details__content">
