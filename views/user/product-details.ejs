                <div class="row d-flex justify-content-center">
                    <div class="col-lg-8">
                        <div class="product__details__text">
                            <h4><%= product.ProductName || 'Product Name' %></h4>
                            <div class="rating">
                                <% for (let i = 1; i <= 5; i++) { %>
                                    <% if (i <= Math.floor(product.rating || 0)) { %>
                                        <i class="fa fa-star"></i>
                                    <% } else if (i - (product.rating || 0) < 1 && i - (product.rating || 0) > 0) { %>
                                        <i class="fa fa-star-half-o"></i>
                                    <% } else { %>
                                        <i class="fa fa-star-o"></i>
                                    <% } %>
                                <% } %>
                                <span> - <%= (product.rating || 0).toFixed(1) %> Rating</span>
                            </div>
                            <% if (totalOffer > 0) { %>
                                <h3>$<%= (product.SalePrice || 0).toFixed(2) %> 
                                    <span>$<%= (product.RegularPrice || 0).toFixed(2) %></span>
                                    <span class="discount-label"><%= totalOffer %>% OFF</span>
                                </h3>
                            <% } else { %>
                                <h3>$<%= (product.SalePrice || 0).toFixed(2) %></h3>
                            <% } %>
                            <p><%= product.Description || 'No description available' %></p>
                            <div class="product__details__option">
                                <div class="product__details__option__size">
                                    <span>Size:</span>
                                    <% if (product.Variants && product.Variants.length > 0) { %>
                                        <% product.Variants.forEach((variant, idx) => { %>
                                            <label for="size-<%= variant.Size %>">
                                                <%= variant.Size %>
                                                <input type="radio" id="size-<%= variant.Size %>" name="size" value="<%= variant.Size %>" 
                                                    <%= idx === 0 ? 'checked' : '' %> data-quantity="<%= variant.Quantity || 0 %>">
                                            </label>
                                        <% }); %>
                                    <% } else { %>
                                        <label>Not Available</label>
                                    <% } %>
                                </div>
                            </div>
                            <div class="product__details__cart__option">
                                <div class="quantity">
                                    <div class="pro-qty">
                                        <input type="text" value="1" id="qty" min="1" 
                                               max="<%= product.Variants && product.Variants.length > 0 ? Math.min(product.Variants[0].Quantity, 7) : 0 %>">
                                    </div>
                                </div>
                                <% if (product.Status === "Available" && !product.isBlocked && product.Variants && product.Variants.some(v => v.Quantity > 0)) { %>
                                    <a href="javascript:void(0)" onclick="addToCart('<%= product._id %>')" class="primary-btn">Add to Cart</a>
                                <% } else { %>
                                    <button class="primary-btn" disabled>Out of Stock</button>
                                <% } %>
                            </div>
                            <div class="product__details__btns__option">
                                <a href="javascript:void(0)" onclick="addToWishlist('<%= product._id %>')">
                                    <i class="fa fa-heart"></i> Add to Wishlist
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="product__details__tab">
                            <ul class="nav nav-tabs" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" data-toggle="tab" href="#tabs-desc" role="tab">Description</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="tab" href="#tabs-reviews" role="tab">Customer Reviews</a>
                                </li>
                                <li class="nav-item">
