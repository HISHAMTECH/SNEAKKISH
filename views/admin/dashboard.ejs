           tension: 0.4
       }]
   },
   options: {
       responsive: true,
       maintainAspectRatio: false
   }
});

// Customers Chart
new Chart(document.getElementById('customersChart'), {
   type: 'bar',
   data: {
       labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
       datasets: [{
           label: 'New Customers',
           data: [50, 65, 75, 85, 95, 100],
           backgroundColor: '#3b82f6'
       }]
   },
   options: {
       responsive: true,
       maintainAspectRatio: false
   }
});

// Orders Chart
new Chart(document.getElementById('ordersChart'), {
   type: 'line',
   data: {
       labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
